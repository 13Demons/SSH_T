<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.tain.manpower.domain">
    <class name="Post" table="T_POST">
        <id name="postId" column="POST_ID">
            <generator class="uuid"/>
        </id>
        <property name="postName"/>

       <many-to-one name="department"
                    class="Department"
                    column="DEPT_ID"
                    cascade="save-update"
                    lazy="false"/>

        <set name="staffSet" table="T_STAFF" cascade="save-update" inverse="true">
            <key column="POST_ID"/>
            <one-to-many class="Staff"/>
        </set>

    </class>






</hibernate-mapping> 