<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="psot" extends="json-default" >

        <default-class-ref class="com.tain.post.action.PostAction"/>

        <action name="post_save" method="save">
            <result name="success" type="chain">postquery</result>
        </action>


        <action name="postquery" method="query">
            <result name="success">/pages/post/listPost.jsp</result>
        </action>


        <action name="postDeptquery" class="com.tain.department.action.DeptAction" method="query">
            <result name="success">/pages/post/addOrEditPost.jsp</result>
        </action>


        <action name="post_class">
            <result name="success">/pages/post/addOrEditPost.jsp</result>
        </action>





    </package>






</struts>